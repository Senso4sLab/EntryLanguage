<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:entrylanguage="clr-namespace:EntryLanguage"
             x:Class="EntryLanguage.MainPage">

    <StackLayout>
        <Label Text="Please enter any numerical number in default Xamain.Forms Entry object!"/>
        <Entry Keyboard="Numeric" Text="{Binding NumericalNumber}"/>
        <Label Text="Please enter any numerical number in custom Entry object!"/>
        <entrylanguage:CustomEntry Text="{Binding NumericalNumber1}"/>

        <Button Text="Calculated" Clicked="Button_Clicked"/>
        <Label Text="{Binding Result}"/>
    </StackLayout>

</ContentPage>
